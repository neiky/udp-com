<?xml version="1.0" encoding="UTF-8"?>
<!-- Set the internal logg level to "info" and the max. monitorInterval (refreshs 
	the config if it was changed) -->
<Configuration status="info" monitorInterval="30">
	<Appenders>
		<!-- The console appender logs into the console. -->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{ddMMyy-HHmmss.SSS} %X{name}\t%level{length=1} %msg%n" />
		</Console>


	</Appenders>

	<Loggers>
		<Root level="all">
			<AppenderRef ref="Console" />
		</Root>

	</Loggers>
</Configuration>